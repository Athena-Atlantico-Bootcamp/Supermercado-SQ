// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id_usuario       Int      @id @default(autoincrement())
  email     String   @unique
  nome      String
  telefone      Int
  restricoes     String
  tipo_usuario String
  produtosCriados produtos[]? 
}

model produtos {
  id_produto        Int      @id @default(autoincrement())
  nome String,
  descricao String
  imagem String,
  ingredientes String
  usuario    User    @relation(fields: [usuarioId], references: [id_usuario])
  usuarioId      Int
}

model comentarios {
  id_comentario        Int      @id @default(autoincrement())
  nome String,
  descricao String
  imagem String,
  ingredientes String
  usuario    User    @relation(fields: [usuarioId], references: [id_usuario])
  usuarioId      Int
  produto    User    @relation(fields: [produtoId], references: [id_produto])
  produtoId      Int
}